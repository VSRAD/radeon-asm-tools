<UserControl x:Class="VSRAD.Package.DebugVisualizer.SliceVisualizer.SliceVisualizerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VSRAD.Package.DebugVisualizer.SliceVisualizer"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <local:SliceVisualizerHeaderControl DataContext="{Binding}" DockPanel.Dock="Top"/>
        <StatusBar DockPanel.Dock="Bottom" Height="20" x:Name="SliceStatusBar">
            <TextBlock Text="{Binding StatusString}"/>
        </StatusBar>
        <local:SliceVisualizerTableHost x:Name="TableHost"/>
    </DockPanel>
</UserControl>
