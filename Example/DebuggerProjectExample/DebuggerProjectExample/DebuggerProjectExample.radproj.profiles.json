{
  "vaddDebug": {
    "General": {
      "RunActionsLocally": false,
      "ContinueActionExecOnError": false,
      "LocalWorkDir": "$(RadLocalWorkDir)",
      "RemoteWorkDir": "$(RadRemoteWorkDir)"
    },
    "Macros": [
      [
        "RadLocalWorkDir",
        "$(ProjectDir)"
      ],
      [
        "RadRemoteWorkDir",
        "/VectorAddProjectExample"
      ],
      [
        "RadDeployDir",
        "$(RadRemoteWorkDir)/gfx9"
      ],
      [
        "RadDebugDataOutputPath",
        "$(RadRemoteWorkDir)/debug_data"
      ]
    ],
    "Actions": [
      {
        "Name": "Build",
        "Steps": [
          {
            "Direction": "LocalToRemote",
            "SourcePath": "$(RadActiveSourceFullPath)",
            "TargetPath": "$(RadDeployDir)/$(RadActiveSourceFile)",
            "FailIfNotModified": false,
            "SkipIfNotModified": false,
            "PreserveTimestamps": false,
            "IncludeSubdirectories": false,
            "UseCompression": false,
            "Type": "CopyFile"
          },
          {
            "Environment": "Remote",
            "Executable": "bash",
            "Arguments": "-c \"/opt/rocm/llvm/bin/clang -x assembler -target amdgcn--amdhsa -mcpu=`/opt/rocm/bin/rocminfo | grep -om1 gfx9..`  -I$(RadDeployDir)/include -o fp32_v_add_build.co $(RadDeployDir)/$(RadActiveSourceFile)\"",
            "WorkingDirectory": "$(RadRemoteWorkDir)",
            "RunAsAdmin": false,
            "WaitForCompletion": true,
            "TimeoutSecs": 0,
            "ConfirmTerminationOnTimeout": true,
            "Type": "Execute"
          }
        ]
      },
      {
        "Name": "Debug",
        "Steps": [
          {
            "Name": "Build",
            "Type": "RunAction"
          },
          {
            "Environment": "Remote",
            "Executable": "bash",
            "Arguments": "$(RadRemoteWorkDir)/common/debugger/vadd_debug.sh -l $(RadBreakLine) -t $(RadCounter) -f \"$(RadDeployDir)/$(RadActiveSourceFile)\" -w \"$(RadWatches)\" -o \"$(RadDebugDataOutputPath)\"",
            "WorkingDirectory": "$(RadRemoteWorkDir)",
            "RunAsAdmin": false,
            "WaitForCompletion": true,
            "TimeoutSecs": 0,
            "ConfirmTerminationOnTimeout": true,
            "Type": "Execute"
          },
          {
            "BinaryOutput": true,
            "OutputOffset": 0,
            "OutputFile": {
              "Location": "Remote",
              "Path": "$(RadDebugDataOutputPath)",
              "CheckTimestamp": true
            },
            "WatchesFile": {
              "Location": "Remote",
              "Path": "",
              "CheckTimestamp": true
            },
            "DispatchParamsFile": {
              "Location": "Remote",
              "Path": "",
              "CheckTimestamp": true
            },
            "Type": "ReadDebugData"
          }
        ]
      }
    ],
    "MenuCommands": {
      "DebugAction": "",
      "ProfileAction": "",
      "DisassembleAction": "",
      "PreprocessAction": ""
    }
  }
}